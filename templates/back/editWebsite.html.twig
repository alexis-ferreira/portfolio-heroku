{% extends 'baseBack.html.twig' %}

{% block body %}

    <section id="form-add-website" class="text-dark mx-auto" style="width: 80%">
        {{ form_start(form) }}

        <div class="website-title-input">
            <div class="mt-4 mb-2">Titre du site</div>
            {{ form_row(form.website_title) }}
        </div>

        <div class="website-title-input">
            <div class="mt-4 mb-2">Description</div>
            {{ form_row(form.description) }}
        </div>

        <div class="website-title-input">
            <div class="mt-4 mb-2">Adresse du site</div>
            {{ form_row(form.url) }}
        </div>

        <div class="website-title-input">
            <div class="mt-4 mb-2">Image du site</div>
            {{ form_row(form.picture, { 'attr':{"onChange": "loadFile(event)"} }  ) }}
        </div>
        <div class="col-md-12 text-center mb-3">

            <img id="image" style='width:400px'>

        </div>

        <div class="website-title-input">
            <div class="mt-4 mb-2">Miniature</div>
            {{ form_row(form.thumbnail, { 'attr':{"onChange": "loadFile2(event)"} }  ) }}
        </div>
        <div class="col-md-12 text-center mb-5">

            <img id="image2" style='width:400px'>

        </div>

        <div class="btn-submit mb-5">
            {{ form_row(form.Ajouter) }}
        </div>

        {{ form_end(form) }}
    </section>

    <script>
        var loadFile = function (event) {
            var image = document.getElementById('image');
            image.src = URL.createObjectURL(event.target.files[0]);
        };

        var loadFile2 = function (event) {
            var image2 = document.getElementById('image2');
            image2.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>

{% endblock %}

