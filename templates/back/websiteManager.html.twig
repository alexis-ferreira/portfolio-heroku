{% extends 'baseBack.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}

    <section id="websites-table">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>

            {% for website in websites %}
                
            <tr>
                <td class="fs-5">{{ website.websiteTitle }}</td>
                <td>
                    <a href="{{ path('editWebsite', {'id': website.id }) }}" class="btn btn-primary">Modifier</a>
                    <a href="" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>

            {% endfor %}

            </tbody>
        </table>
    </section>

{% endblock %}

