{% block body %}

    <section id="website-list" class="mt-4">
        <div class="website-list-title fs-3 mb-2">
            <div class="ms-1">
                Les projets
            </div>
        </div>
        <div class="website-thumbnail-container position-relative">
            <div id="fadeScrollBar"></div>
            <div class="website-thumbnail col-md-12 overflow-auto d-flex pb-3 ps-4 mb-4">
